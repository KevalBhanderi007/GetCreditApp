<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dollar" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toRightOf="@+id/img1"
            android:text="Get Credit"
            android:textColor="@color/bgcolor"
            android:textSize="@dimen/_15sdp"

            />


        <LinearLayout
            android:id="@+id/getamount"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/borderbg">


            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/wallet" />

            <TextView
                android:id="@+id/txt_total_earn_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/green"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_210sdp"
        android:layout_below="@+id/rel1"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white">


        <TextView
            android:id="@+id/putvalue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/registerbtn"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/txtcaptcha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/putvalue"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_70sdp"
            android:background="@drawable/registerbtn"
            android:backgroundTint="@color/green_light"
            android:gravity="center"
            android:text="CAPTCHA"
            android:textColor="@color/green"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rel7"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/registerbtn"
            android:backgroundTint="@color/green_light">


            <ImageView
                android:id="@+id/refresh_captcha"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/refresh" />

        </RelativeLayout>


        <EditText
            android:id="@+id/enter_captcha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/rel7"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="@color/black"
            android:background="@drawable/borderbtn2"
            android:hint="   Enter Above Captcha" />

        <TextView
            android:id="@+id/submit_captcha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/enter_captcha"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/registerbtn"
            android:gravity="center"
            android:text="SUBMIT CAPTCHA"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/rel2"
        android:layout_marginTop="26dp"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rateus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/borderbg">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Rate Us on Playstore"
                android:textColor="@color/green"

                />

            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt6"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Rate us and earn 100 Points " />


            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/arrow" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/invitefnd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/rateus"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/borderbg">

            <TextView
                android:id="@+id/txt8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Invite Friends"
                android:textColor="@color/green"

                />

            <TextView
                android:id="@+id/txt9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt8"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:textColor="@color/black"
                android:text="Share App and Earn 250 Rupee " />


            <ImageView
                android:id="@+id/img5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/arrow" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/joinus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/invitefnd"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/borderbg"
            >

            <TextView
                android:id="@+id/txt10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Private Policy"
                android:textColor="@color/green"

                />

            <TextView
                android:id="@+id/txt11"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt10"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:text="Read the Private Policy" />


            <ImageView
                android:id="@+id/img6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/arrow" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>